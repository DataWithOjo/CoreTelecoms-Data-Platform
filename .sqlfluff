[sqlfluff]
dialect = snowflake
templater = dbt
runaway_limit = 10
max_line_length = 120
indent_unit = space

# Ignore these specific errors:
# ST06: Select wildcards 
# LT05: Line too long
exclude_rules = ST06, LT05

[sqlfluff:templater:dbt]
project_dir = ./dbt_core_telecoms
profiles_dir = ./dbt_core_telecoms
# This tells sqlfluff to ignore dependency errors during CI
apply_dbt_builtins = true