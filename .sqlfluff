SQLFLUFF_CONFIG="$GITHUB_WORKSPACE/.sqlfluff"

cat <<EOF > $SQLFLUFF_CONFIG
[sqlfluff]
dialect = snowflake
templater = dbt

[sqlfluff:templater:dbt]
project_dir = dbt_core_telecoms
profiles_dir = dbt_core_telecoms
load_macros_from_packages = true

[sqlfluff:templater:dbt:compile]
static_parser = true
no_partial_parse = true
EOF
