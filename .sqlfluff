[sqlfluff]
dialect = snowflake
templater = dbt
runaway_limit = 10
max_line_length = 120
indent_unit = space
exclude_rules = ST06, LT05

[sqlfluff:templater:dbt]
project_dir = dbt_core_telecoms
profiles_dir = dbt_core_telecoms

# Correct path where `dbt deps` installs macros
packages_install_path = dbt_core_telecoms/dbt_packages

# REQUIRED so sqlfluff loads macros from dbt_utils
load_macros_from_packages = true
apply_dbt_builtins = true
