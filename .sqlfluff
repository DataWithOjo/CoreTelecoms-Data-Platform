[sqlfluff]
# Set the target database dialect
dialect = snowflake
# Use the dbt templater to understand Jinja macros
templater = dbt
runaway_limit = 10
max_line_length = 120
indent_unit = space

# Corrected Rule IDs for common ignores:
# L016: Line too long (previously LT05)
# L022: Select wildcards (SELECT *), previously ST06
exclude_rules = L016, L022, L036, ST06

[sqlfluff:templater:dbt]
# Path to the dbt project.
project_dir = dbt_core_telecoms

# CRITICAL: The profiles directory location, required for the dbt templater
profiles_dir = ~/.dbt

# CRITICAL: Decoupling from the live database
# Set to false to prevent database connection attempts in CI and mock built-ins
apply_dbt_builtins = false
# Ensures all compilation logic is handled internally, rather than spinning up dbt's complex runner
process_runner = false