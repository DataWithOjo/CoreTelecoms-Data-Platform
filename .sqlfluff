[sqlfluff]
dialect = snowflake
templater = dbt
max_line_length = 120
exclude_rules = L009,L031,ST06

[sqlfluff:templater:dbt]
# Prevent SQLFluff from connecting to Snowflake
apply_dbt_builtins = false
# Tell SQLFluff where macros live
project_dir = ./dbt_core_telecoms
profiles_dir = IGNORE

load_macros_from_packages = true
packages_install_path = ./dbt_core_telecoms/dbt_packages

[sqlfluff:templater:dbt:context]
dbt_utils = {}
